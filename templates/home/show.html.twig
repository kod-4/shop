{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Home</h1>
        <a class="btn btn-outline-primary p-3" href="{{ path('home_index') }}"><i class="fas fa-hand-point-left"></i> Back</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ home.titre }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ home.resume }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ home.marque }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ home.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('home_edit', {'id': home.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('home/_delete_form.html.twig') }}
</div>
{% endblock %}
