{% extends 'base.html.twig' %}

{% block title %}Home index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Home index</h1>
        <a class="btn btn-outline-primary p-3" href="{{ path('home_new') }}">Cr√©er <i class="far fa-plus-square"></i></a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Resume</th>
                <th>Marque</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for home in homes %}
            <tr>
                <td>{{ home.id }}</td>
                <td>{{ home.titre }}</td>
                <td>{{ home.resume }}</td>
                <td>{{ home.marque }}</td>
                <td>{{ home.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                    <a class="link-secondary me-2" href="{{ path('home_show', {'id': home.id}) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('home_edit', {'id': home.id}) }}"><i class="far fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
