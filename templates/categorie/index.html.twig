{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Categorie index</h1>
        <a class="btn btn-outline-primary p-3" href="{{ path('categorie_new') }}">Cr√©er <i class="far fa-plus-square"></i></a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.titre }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="far fa-eye"></i></a>
                        <a href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="far fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
