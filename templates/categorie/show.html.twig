{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Categorie</h1>
        <a class="btn btn-outline-primary p-3" href="{{ path('categorie_index') }}"><i class="fas fa-hand-point-left"></i> Back</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ categorie.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ categorie.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('categorie/_delete_form.html.twig') }}
</div>
{% endblock %}
