{% extends 'base.html.twig' %}

{% block title %}Couleur{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Couleur</h1>
        <a class="btn btn-outline-primary p-3" href="{{ path('couleur_index') }}"><i class="fas fa-hand-point-left"></i> Back</a>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ couleur.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ couleur.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ couleur.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ couleur.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <a class="btn btn-outline-primary mt-2" href="{{ path('couleur_edit', {'id': couleur.id}) }}"><i class="far fa-edit"></i></a>
    {{ include('couleur/_delete_form.html.twig') }}
</div>
{% endblock %}
