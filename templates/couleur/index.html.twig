{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Couleur index</h1>
        <a class="btn btn-outline-primary p-3" href="{{ path('couleur_new') }}">Cr√©er <i class="far fa-plus-square"></i></a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.titre }}</td>
                <td>{{ couleur.description }}</td>
                <td>{{ couleur.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('couleur_show', {'id': couleur.id}) }}"><i class="far fa-eye"></i></a>
                        <a href="{{ path('couleur_edit', {'id': couleur.id}) }}"><i class="far fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
