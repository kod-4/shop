{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block body %}
    <h1>Couleur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.titre }}</td>
                <td>{{ couleur.description }}</td>
                <td>{{ couleur.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('couleur_show', {'id': couleur.id}) }}">show</a>
                    <a href="{{ path('couleur_edit', {'id': couleur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('couleur_new') }}">Create new</a>
{% endblock %}
