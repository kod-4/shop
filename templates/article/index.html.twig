{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1>Article index</h1>
        <a class="btn btn-outline-primary p-3" href="{{ path('article_new') }}">Cr√©er <i class="far fa-plus-square"></i></a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Image</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Couleur</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td><img src="{{ asset('images/articles/' ~ article.image) }}" alt="article img" class="img-list"></td>
                <td>{{ article.description }}</td>
                <td>{{ article.prix|number_format(0, '', '.') }}</td>
                <td>{{ article.categorie }}</td>
                <td>{{ article.couleur }}</td>
                <td>{{ article.active ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="d-flex">
                        <a class="link-secondary me-2" href="{{ path('article_show', {'id': article.id}) }}"><i class="far fa-eye"></i></a>
                        <a href="{{ path('article_edit', {'id': article.id}) }}"><i class="far fa-edit"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
